<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="@color/login_box_bg"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="68dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Query"
            android:layout_marginTop="14dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:id="@+id/etQuery"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:hint="your query"
                android:background="@drawable/shape_box"
                android:layout_height="46dp" />
            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="Submit"
                android:id="@+id/btnSubmitQuery"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:singleLine="true"
                android:background="@color/screen_bg"
                android:layout_height="46dp" />
        </LinearLayout>





    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:visibility="gone"

        android:background="@color/white"
        app:cardCornerRadius="4dp"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:singleLine="true"
           android:hint="Address"
            android:gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
           android:textColor="@color/black"
            android:text="17-AX Model Town extension, Model Town, Ludhiyana"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="4dp"
        android:elevation="10dp"
        android:background="@color/white"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:hint="Phone and Email"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:text="+9192168-00636 \n info@ecosingh.org "
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>